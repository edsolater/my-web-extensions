{
  "manifest_version": 3,
  "name": "链接收集器",
  "version": "1.0",
  "description": "收集当前页面中的所有链接。",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/icon16.png",
      "48": "/images/icon48.png",
      "128": "/images/icon128.png"
    }
  },
  "icons": {
    "16": "/images/icon16.png",
    "48": "/images/icon48.png",
    "128": "/images/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}